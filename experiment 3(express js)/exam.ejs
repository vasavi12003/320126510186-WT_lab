<html>
<head>
    <title>ONLINE EXAM PORTAL</title>
<style>
body{
    margin:0;
    padding:0;
}
#menu{
width:100%;
height:15%;
background-color:#333;
display:flex;
justify-content: center;
align-items: center;
}
button{
    margin: 0 10px;
    font-size: 16px;
    padding: 8px 12px;
    width:180px;
    height:auto;
    background-color: #555;
    color: white;
    border-radius:15px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}
button:hover{
background-color:#777;
}
#footer{
    width:100%;
    height:10%;
    background-color:#333;
}
#middle{
    background-color:white;
    width:100%;
    height:65.5%;
}
input[type="text"],
input[type="password"] {
    margin-top:10px;
    margin-bottom: 10px;
    padding: 8px;
    width: 300px;
    border: 1px solid #121212;
    border-radius: 5px;
    font-size: 16px;
}

input[type="submit"] {
    align-self:center;
    padding: 8px 12px;
    width: 150px;
    background-color: #555;
    color: white;
    border: none;
    border-radius: 15px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

input[type="submit"]:hover {
    background-color: #777;
}
p{
    font-weight: bold;
    font-size:20px;
    margin-top:70px;
    margin-left:550px;
}
</style>
<script>
    let g = 0;
let currentQuestion = 1;
let timer;

function moveToNextQuestion() {
    if (currentQuestion === 1) {
        ans1();
    } else if (currentQuestion === 2) {
        ans2();
    } else if (currentQuestion === 3) {
        ans3();
    }
}

function ans1() {
    clearTimeout(timer);
    const x = document.querySelector('input[name="ans1"]:checked').value;
    if (x === "EARTH") {
        g++;
    }
    currentQuestion = 2;
    document.getElementById('middle').innerHTML = '<p>What is the name of our solar system?<br><br>' +
        '<input type="radio" id="ans2" name="ans2" value="WHIRLPOOL" onclick="ans2()">WHIRLPOOL' +
        '<input type="radio" id="ans2" name="ans2" value="CIGAR" onclick="ans2()">CIGAR' +
        '<input type="radio" id="ans2" name="ans2" value="LMC" onclick="ans2()">LMC' +
        '<input type="radio" id="ans2" name="ans2" value="MILKYWAY" onclick="ans2()">MILKYWAY' +
        '<br><br></p>';
    timer = setTimeout(moveToNextQuestion, 3000);
}

function ans2() {
    clearTimeout(timer);
    const x = document.querySelector('input[name="ans2"]:checked').value;
    if (x === "MILKYWAY") {
        g++;
    }
    currentQuestion = 3;
    document.getElementById('middle').innerHTML = '<p>Which colour has the highest wavelength?<br><br>' +
        '<input type="radio" id="ans3" name="ans3" value="RED" onclick="ans3()">RED' +
        '<input type="radio" id="ans3" name="ans3" value="BLACK" onclick="ans3()">BLACK' +
        '<input type="radio" id="ans3" name="ans3" value="BLUE" onclick="ans3()">BLUE' +
        '<input type="radio" id="ans3" name="ans3" value="YELLOW" onclick="ans3()">YELLOW' +
        '<br><br></p>';
    timer = setTimeout(moveToNextQuestion, 3000);
}

function ans3() {
    clearTimeout(timer);
    const x = document.querySelector('input[name="ans3"]:checked').value;
    if (x === "RED") {
        g++;
    }
    currentQuestion = 4;
    document.getElementById('middle').innerHTML = '<p><button type="button" onclick="sub()" style="margin-left:550px;">SUBMIT</button></p>';
}

function sub() {
    clearTimeout(timer); // Cancel the timer when the user submits
    document.getElementById('middle').innerHTML = '<p>YOUR SCORE IS: ' + g + '</p>';
}

// Start the timer initially
timer = setTimeout(moveToNextQuestion, 3000);

</script>
</head>
<body>
    <div id="menu">
        <button onclick="location.href='/index.html'">HOME</button>&nbsp &nbsp &nbsp &nbsp &nbsp
        <!-- <button onclick="location.href='/exam'">EXAM</button>&nbsp &nbsp &nbsp &nbsp &nbsp -->
        <button onclick="location.href='/logout'">LOGOUT</button>&nbsp &nbsp &nbsp &nbsp &nbsp
    </div>
    <div id="middle">
        <p>What is the third planet in our solar system?<br><br>
            <input type="radio" id='ans1' name="ans1" value="MERCURY" onclick="ans1()">MERCURY
            <input type="radio" id='ans1' name="ans1" value="JUPITER" onclick="ans1()">JUPITER
            <input type="radio" id='ans1' name="ans1" value="EARTH" onclick="ans1()">EARTH
            <input type="radio" id='ans1' name="ans1" value="SATURN" onclick="ans1()">SATURN
            <br><br>
        </p>
    </div>
    <footer>
        <div id="footer"></div>
    </footer>
</body>
</html>








